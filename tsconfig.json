{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib/types",
    "emitDeclarationOnly": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "__tests__"
  ]
}
